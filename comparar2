numero1 = float(input("Inserir o primeiro número: "))
numero2 = float(input("Inserir o segundo número: "))
if numero1 > numero2:
    print(numero1, "é o número maior e",numero2, "é o número menor.")
elif numero2 > numero1:
    print(numero2, "é o número maior e",numero1, "é o número menor.")
else:
    print("Os números são iguais.")
