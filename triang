lado1 = float(input("Inserir comprimento do primeiro lado do triângulo:"))
lado2 = float(input("Inserir comprimento do segundo lado do triângulo:"))
lado3 = float(input("Inserir comprimento do terceiro lado do triângulo:"))

if lado1 + lado2 > lado3 and lado1 + lado3 > lado2 and lado2 + lado3 > lado1:
    print("O triângulo é válido.")

    if lado1 == lado2 and lado2 == lado3:
        print("O triângulo é equilátero.")
    elif lado1 != lado2 and lado2 != lado3 and lado3 != lado1:
        print("O triângulo é escaleno.")
    else:
        print("O triângulo é Isósceles.")

else:
    print("O triângulo não é válido.")
