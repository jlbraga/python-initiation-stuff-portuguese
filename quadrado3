lado1 = int(input("Determine o comprimento da horizontal: "))
lado2 = int(input("Determine o comprimento da vertical: "))
caracter = input("Escolha o caracter a ser usado: ")

#print(caracter*lado1)

for i in range (0, lado1):
    for j in range (0, lado2):
        if i == 0 or i == lado1 -1 or j == 0 or j == lado2-1:
            print(caracter, " ", end = '')  
        else:
            print("   ", end = '')
    print("")
