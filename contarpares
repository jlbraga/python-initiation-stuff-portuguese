cpares = 0
cimpares = 0

numnat = int(input("Inserir número natural: "))

while numnat > 0:

    if numnat % 2 == 0:
        cpares += 1
        numnat = float(input("Inserir número natural: "))

    if numnat % 2 != 0:
        cimpares += 1
        numnat = float(input("Inserir número natural: "))

else:
    print("A quantidade de números pares é de", cpares)
